<div class="container"> 
<br>
  <div>
    <p>Current User Information:</p>
    <p>Login: {{login}}</p>
    <p>Email: {{email}}</p>
  </div>
<form id="changeForm" action="/profileChange" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Change email address</label>
    <input type="email" class="form-control" name="emailChange" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Change Username</label>
    <input type="text" class="form-control" name="usernameChange" aria-describedby="emailHelp" placeholder="Enter username">
  </div>
  <div id="emailChangeCheck" class="form-text" style="color: red;"></div>
  <button type="submit" class="btn btn-primary">Submit Changes</button>
</form>
</div>
