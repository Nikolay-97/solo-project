<form id="createPostForm" action="/createpost" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" aria-describedby="emailHelp" placeholder="Пиши title">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="textarea" class="form-control" name="description" placeholder="Пиши description">
  </div>
  <div id="createPostCheck" class="form-text" style="color: red;"></div>
  <button type="submit" class="btn btn-primary">Create Post!</button>
</form>
