<form id="editPostForm" action="/posts/{{onePost.id}}/edit" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" aria-describedby="emailHelp" placeholder="Меняй title">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="textarea" class="form-control" name="description" placeholder="Меняй description">
  </div>
  <div id="editPostCheck" class="form-text" style="color: red;"></div>
  <button type="submit" class="btn btn-primary">Edit Post!</button>
</form>
