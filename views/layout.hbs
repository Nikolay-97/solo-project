<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TigerSite</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script defer src="/app.js"></script>
    <script
      src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=f12ff023-0656-47d7-8db5-61a33972a210"
      type="text/javascript"
    ></script>
    <script
      src="https://yandex.st/jquery/2.2.3/jquery.min.js"
      type="text/javascript"
    ></script>
    <script src="route_panel_control.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        {{! <a class="navbar-brand" href="#">TigerSite</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button> }}

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home
                <span class="sr-only">(current)</span></a>
            </li>
            {{#if Authenticated}}
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/posts">Posts</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/reg">Registration</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </header>

    <div class="container">
      {{{body}}}
    </div>

    <footer>
      <nav
        class="navbar d-flex justify-content-between fixed-bottom navbar-dark bg-light"
      >
        <form id="getWeather">
          <select
            class="form-select city"
            id="inputGroupSelect04"
            aria-label="Example select with button addon"
            style="height: 35px;"
          >
            <option selected value="Санкт-Петербург">Санкт-Петербург</option>
            <option value="Сочи">Сочи</option>
            <option value="Уссурийск">Уссурийск</option>
          </select>
          <button
            class="btn btn-outline-danger"
            type="submit"
            id="weatherButton"
          >Посмотреть погоду</button>
        </form>
        <i class="weather-icon owf"></i>
        <div class="temperature"></div>
        <div class="weather-description"></div>
        <a style="color:black" class="navbar-brand" href="#">Made by Tiger</a>

      </nav>
    </footer>
  </body>
</html>
